    <!-- css stylesheets -->
    @*@Styles.Render("~/Content/layoutcss/")*@
    <link rel="stylesheet" href="~/content/css/bootstrap.css" />
    <link rel="stylesheet" href="~/content/css/social-buttons-3.css" />
    <link rel="stylesheet" href="~/content/css/style.min.css" />
