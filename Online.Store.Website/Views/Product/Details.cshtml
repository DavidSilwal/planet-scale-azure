@model Online.Store.Website.Models.ProductsViewModel
@{
    ViewBag.Title = " Welcome :: Contoso Web ::  ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/scripts/imagePreview.js"></script>
@*@Scripts.Render("~/bundles/product")*@
<script type="text/javascript" src="~/scripts/product/product.js"></script>
<script type="text/javascript" src="~/scripts/product/startNewDiscussionLoginCheck.js"></script>
<script type="text/javascript" src="~/scripts/product/viewcart.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        imagePreview.attachImagePreviewToImages();
        products.initialize();
    });
</script>
<div class="container-fluid" id="innerpage-banner">
    <img class="img-responsive" alt="" src="~/content/images/innerpage-banner.jpg">
</div>

<div class="container-fluid">
    <div class="row" id="main-content-container-fluid-first-row">
        <div class="col-lg-8">
            <div class="col-sm-12 background_white prdcontainer">
                <div id="prd_componentss">
                    @if (Model != null)
                    {
                        <h1>
                            @String.Format("{0:C}", @Model.ProductPrice)
                            @Model.ProductHeading
                            <a class="btn addToCart" id="login-to-addcart" data-productid="@Model.ProductId" style="float: right;"><i class="glyphicon glyphicon-shopping-cart" data-unicode="e116"></i></a>
                        </h1>
                        <div class="prdcomponent">
                            <h2>Description</h2>
                            <div class="text-content short-text">@Model.Description</div>
                            <div class="show-more"><a href="#">Show more</a></div>
                        </div>
                        foreach (var viewModelDataItem in Model.ProductComponentsList)
                        {
                            <div class="prdcomponent @viewModelDataItem.ProductComponentHeading">
                                <h2>@viewModelDataItem.ProductComponentHeading</h2>
                                <ul class="thumb_image_list">
                                    @foreach (var productComponentImagePath in viewModelDataItem.ProductMediaList)
                                    {
                                        <li>
                                            <a href=@Url.Action("ShowMedia", new { ImageName = @productComponentImagePath.ImagePath }) class="media_popup_parent" data-media-width="@productComponentImagePath.ImageEnlargeWidth" data-media-height="@productComponentImagePath.ImageEnlargeHeight" data-media-path="@Url.Content("~/Content/images/products/large/" + productComponentImagePath.ImagePath)" data-media-type="image" data-media-description=""><img class="thumb_image media-object" alt="" src="~/Content/images/products/thumbnail/@productComponentImagePath.ImagePath"></a>
                                        </li>

                                    }
                                </ul>
                                <div class="text-content short-text">@viewModelDataItem.ProductComponentDescription</div>
                                <div class="show-more"><a href="#">Show more</a></div>
                            </div>
                        }
                    }
                    else
                    {
                        <h1>
                            No Product.
                        </h1>
                    }
                </div>
                <div class="clear_both"></div>
            </div>
        </div>
        <div class="col-lg-4">
            <!-- column 4 (sidebar) Panels -->
            <!-- Twitter Widget panel -->
            @{
                Html.RenderPartial("_TwitterView");
            }

            <!-- TOP 5 Users -->
            @{
                Html.RenderPartial("_TopFiveUsersView");
            }
            <!-- /column 4 (sidebar) -->
        </div>
    </div>
</div>
